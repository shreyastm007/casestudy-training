@model IEnumerable<JokesWbApp.Models.Joke>

@{
    ViewData["Title"] = "Index";
}

<h1>INDEX</h1>

<p>
    <a asp-action="Create" class="text-dark">Create New Joke</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" >Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="text-dark">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
